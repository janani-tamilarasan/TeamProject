%h1.display-inline Teams
= link_to 'New Team', new_team_path,class:'new-team',class: 'display-inline'
- if @teams.present?
  = link_to 'Shifts', shifts_path,id:"new-shift"
  %table.table
    %thead
      %tr
        %th{:scope => "col"} #
        %th{:scope => "col"} Team Name
        %th{:scope => "col"}
        %th{:scope => "col"}
        %th{:scope => "col"}
    %tbody
      - @teams.each.with_index(1)  do |team,index|
        %tr
          %th{:scope => "row"}= index
          %td= team.team_name.capitalize
          %td
            = link_to 'Show', team
          %td= link_to 'Edit', edit_team_path(team)
          %td= link_to 'Delete', team, method: :delete, data: { confirm: 'Are you sure?' }
- else
  %p No records are found
